{% extends "layout/base.twig" %}

{% block title %}[[Active screenings]]{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-md-12">
            <div class="bg-light rounded">
                <div class="col-sm-8 py-5 mx-auto">
                    <h3>[[Active screenings]]</h3>
                    <p>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th scope="col">[[ID]]</th>
                            <th scope="col">[[Movie]]</th>
                            <th scope="col">[[Starts at]]</th>
                            <th scope="col">[[Duration]]</th>
                            <th scope="col">[[Seats]]</th>
                            <th scope="col">[[Auditorium]]</th>
                            <th scope="col">[[Price]]</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for screening in screenings %}
                            <tr>
                                <th scope="row">{{ screening.id }}</th>
                                <td>{{ screening.movie.title }}</td>
                                <td>{{ screening.startsAt.format('d.m.Y H:i') }}</td>
                                <td>{{ screening.movie.duration }} [[min]]</td>
                                <td>{{ screening.auditorium.totalSeats }}</td>
                                <td>{{ screening.auditorium.name }}</td>
                                <td>{{ screening.price }}$</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
