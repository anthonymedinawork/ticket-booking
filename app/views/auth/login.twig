{% extends "layout/base.twig" %}

{% block title %}[[Authentication Required]]{% endblock %}
{% block bodyClass %}w-100 h-100{% endblock %}

{% block content %}
    <div class="container-fluid auth-body">
        <main class="form-signin w-100 m-auto text-center">
            <form method="post" action="{{ route('login') }}">
                <img class="mb-4" src="/images/logo.svg" alt="" width="72">
                <h1 class="h3 mb-3 fw-normal">[[Please sign in]]</h1>
                {% if errors is not empty %}
                    <div class="alert alert-danger">{{ errors | first }}</div>
                {% endif %}
                <div class="form-floating">
                    <input type="email" name="email" required="required" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">[[Email]]</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" required="required" class="form-control" id="floatingPassword" placeholder="[[Password]]">
                    <label for="floatingPassword">[[Password]]</label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">[[Sign in]]</button>
                <div class="pt-3">
                    [[Don't have an account? Click]] <a href="{{ route('register') }}">[[here]]</a> [[and create new account.]]
                </div>
            </form>
        </main>
    </div>
{% endblock %}
